    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/wiki",
            "program": "${workspaceFolder}/github-wiki-sidebar-generator/lib/cli.js",
            "args": [
                "${workspaceFolder}/wiki"
            ],
            "outFiles": [
                "${workspaceFolder}/wiki/**/*"
            ],
            "console": "integratedTerminal"
        }
    ]
}